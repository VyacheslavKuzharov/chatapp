extends ../layout

block content
    h1 Chat Rooms:
    a.btn.btn-primary(href='/admin/rooms/new') New Room
    table.table.table-striped
        thead
            tr
                th Name
                th Id
        tbody
            each room in rooms
                tr
                    td(style='width: 50px'): a(href="/admin/room/#{room.id}/delete")
                        span.glyphicon.glyphicon-remove
                    td= room.name
                    td(style='width: 50px'): a(href="/admin/room/#{room.id}/edit")
                        span.glyphicon.glyphicon-pencil
                    td= room.id